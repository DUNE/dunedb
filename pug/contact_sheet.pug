extend default

include common

block vars
  - page_title="New Component Contact Sheet";

block extrascripts
  link(rel='stylesheet' href='/css/qr.css')
  style.
    .contactGrid {
      display: grid;
      grid-template-rows: repeat(3,70mm);
      grid-template-columns: repeat(3,70mm);
    }
    .contactBox {
      border:4px solid #EEE;
    }


block allbody
  div.noprint
    a(onclick="window.print(); return false;" href='#print') Print
    div.pull-right.switchToggle
      input#qr-error-safe(type="checkbox",checked="checked")
      label.label-primary(for='qr-error-safe')
  div(style='clear:both;')    
  
  div.contactGrid
    each component in components
      div.contactBox
        +qr-panel(base_url+'/'+component.componentUuid.toString(),component.data.name)



    

