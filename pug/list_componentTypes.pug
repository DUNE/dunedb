
extend default
include common.pug


block vars
  - var page_title = "All Component Types";


block content
  .container-fluid
    pre #{''}
    pre #{''}
    
    if(permissions.userHas(user, "forms:edit"))
      a(href = '#', data-toggle = "modal" data-target = "#NewComponentTypeModal").NewComponentType.btn.btn-warning
        img.small-icon(src = '/images/edit_icon.svg')
        | &nbsp; Create New Component Type
      
      #NewComponentTypeModal.modal.fade(tabindex = '-1' role = 'dialog' aria-labelledby = 'NewComponentTypeLabel' aria-hidden = 'true')
        .modal-dialog(role = "document")
          .modal-content
            .modal-header
              h5#NewComponentTypeLabel.modal-title Create New Component Type
              button.close(type = "button", data-dismiss = "modal", aria-label = "Close")
                span(aria-hidden = true) &times;
            .modal-body
              div
                | Enter the new component type's form ID.
                br
                | NOTE: this ID should have only underscores and alphanumerics (no spaces) - the human-readable name will be set on the next page.
              pre #{''}
              input.NewComponentTypeName.form-control(type = "text")
            .modal-footer
              button.btn.btn-danger(type = "button", data-dismiss = "modal") Close
              button.btn.btn-success.NewComponentTypeButton(type = "button") Create
      
      script.
        $('button.NewComponentTypeButton').click(function()
        {
          window.location.href = "/components/" + $('button.NewComponentTypeButton').parents('.modal-content').find('input').val() + "/new";
        })
        
        $('input.NewComponentTypeName').on("keyup", function(e)
        {
          if(e.key === "Enter") 
          {
            window.location.href = "/components/" + $(this).val() + "/new";
          }
        })
      
      pre #{''}
      pre #{''}
    
    h2 Available Component Types

    pre #{''}
    
    table.table
      thead
        tr
          th.col-md-3 Type ID
          th.col-md-4 Type Name
          th.col-md-3
          th.col-md-2
      
      tbody
        each formId in Object.keys(forms).sort()
          - var form = forms[formId];
        
          if(form.tags && !form.tags.includes("Trash"))
            tr
              td #{formId}
              
              td
                a(href = '/components/' + formId) #{form.formName}
              
              td
                a(href = '/component/' + formId).btn.btn-primary
                  img.small-icon(src = '/images/run_icon.svg')
                  | &nbsp; Create a New Component of this Type
              
              td
                a(href = '/components/' + formId + '/edit').btn.btn-warning
                  img.small-icon(src = '/images/edit_icon.svg')
                  | &nbsp; Edit Component Type Form
    
    pre #{''}
    pre #{''}
    
    h2 Trashed Component Types
    
    pre #{''}
    
    table.table
      thead
        tr
          th.col-md-3 Type ID
          th.col-md-4 Type Name
          th.col-md-3
          th.col-md-2
      
      tbody
        each formId in Object.keys(forms).sort()
          - var form = forms[formId];
        
          if(form.tags && form.tags.includes("Trash"))
            tr
              td #{formId}
              
              td
                a(href = '/components/' + formId) #{form.formName}
              
              td
              
              td
                a(href = '/components/' + formId + '/edit').btn.btn-warning
                  img.small-icon(src = '/images/edit_icon.svg')
                  | &nbsp; Edit Component Type Form
    
    pre #{''}
    pre #{''}

