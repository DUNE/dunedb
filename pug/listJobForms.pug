extend default
include common.pug

      
block content
  h2 Workflows

  table.table-sm.table-hover
    tbody
      each form in forms
        tr
          td=(form.formName || form.formId)
          if(user && user.permissions.includes("jobs:submit"))
            td
              a(href='/job/'+form.formId).btn.btn-outline-primary Run
          if(user && user.permissions.includes("jobs:view"))
            td
              a(href='/jobs/'+form.formId).btn.btn-outline-secondary Recent
          if(user && user.permissions.includes("forms:edit"))
            td
              a(href='/EditWorkflowForm/'+form.formId).btn.btn-outline-warning Edit

  if(user && user.permissions.includes("forms:edit"))
    p.h5.mt-4
     +NewWorkflowForm
